{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strict": true,
        "target": "es2018",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "*": ["node_modules/*"]
        }
    },
    "exclude": ["node_modules", "dist"],
    "include": ["src", "test"]
}
